{
  "name": "nextjs-better-auth",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky",
    "format": "npx prettier src/ --write",
    "@Descr db:sync": "Migrate both Production & Local DB. Alias.",
    "db:sync": "(npm run db:push) && (npm run db:push:prod)",
    "@Descr db:push": "Push changes to Local DB. Generates migrations and applies them.",
    "db:push": "cross-env NODE_ENV=development drizzle-kit push --verbose",
    "@Descr db:push:prod": "Push changes to Production DB",
    "db:push:prod": "cross-env NODE_ENV=production drizzle-kit push --verbose",
    "db:studio": "cross-env NODE_ENV=development drizzle-kit studio --verbose",
    "db:studio:prod": "cross-env NODE_ENV=production drizzle-kit studio --verbose --port 8084"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "@radix-ui/react-avatar": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-separator": "^1.1.3",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.2.0",
    "better-auth": "^1.2.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.41.0",
    "lucide-react": "^0.487.0",
    "next": "15.2.5",
    "next-themes": "^0.4.6",
    "pg": "^8.14.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.55.0",
    "recharts": "^2.15.2",
    "resend": "^4.2.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-typescript": "^7.27.0",
    "@better-auth/cli": "^1.2.5",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9",
    "eslint-config-next": "15.2.5",
    "eslint-plugin-drizzle": "^0.2.3",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}
